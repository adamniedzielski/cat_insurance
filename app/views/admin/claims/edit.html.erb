<h1>Edit Claim</h1>

<%= form_with model: [:admin, @claim] do |form| %>
  <div>
    <%= form.label :status %>
    <%= form.select :status, options_for_select(Claim::STATUSES, @claim.status) %>
  </div>

  <div>
    <%= form.submit 'Update Claim' %>
  </div>
<% end %>

<%= link_to 'Back', admin_claims_path %>
